<Page x:Class="IkanLogger2.Views.CreateLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IkanLogger2.Views"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Background="#FFF5F5F5"
      Title="Buat Catatan Tangkapan">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#DDDDDD" 
                BorderThickness="0,0,0,1"
                Padding="30,20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Buat Catatan Tangkapan" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="#0078D7"/>
                <TextBlock Text="Catat hasil tangkapan ikan Anda hari ini"
                           FontSize="14"
                           Foreground="Gray"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="30,20">
            <Grid MaxWidth="800">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side - Form Input -->
                <Border Grid.Column="0" 
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="25">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="Informasi Tangkapan" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <!-- Notes -->
                        <TextBlock Text="Catatan" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtNotes"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="10"
                                 FontSize="13"
                                 Margin="0,0,0,20"
                                 BorderBrush="#CCCCCC"/>

                        <Separator Margin="0,0,0,20"/>

                        <!-- Add Fish Section -->
                        <TextBlock Text="Tambah Ikan Tangkapan" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>

                        <!-- Fish Selection with AutoComplete -->
                        <TextBlock Text="Pilih Ikan" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,15">
                            <TextBox x:Name="TxtFishSearch"
                                     Padding="10"
                                     FontSize="13"
                                     BorderBrush="#CCCCCC"
                                     TextChanged="TxtFishSearch_TextChanged"
                                     GotFocus="TxtFishSearch_GotFocus"/>
                            <TextBlock Text="Ketik nama ikan..."
                                       Foreground="Gray"
                                       FontSize="13"
                                       Padding="12,11"
                                       IsHitTestVisible="False"
                                       Visibility="{Binding ElementName=TxtFishSearch, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"/>

                            <!-- Autocomplete Popup -->
                            <Popup x:Name="FishSuggestionPopup"
                                   PlacementTarget="{Binding ElementName=TxtFishSearch}"
                                   Placement="Bottom"
                                   Width="{Binding ElementName=TxtFishSearch, Path=ActualWidth}"
                                   MaxHeight="200"
                                   StaysOpen="False">
                                <Border Background="White"
                                        BorderBrush="#CCCCCC"
                                        BorderThickness="1">
                                    <ListBox x:Name="FishSuggestionList"
                                             SelectionChanged="FishSuggestionList_SelectionChanged"
                                             DisplayMemberPath="FishName"/>
                                </Border>
                            </Popup>
                        </Grid>

                        <!-- Selected Fish Display -->
                        <Border x:Name="SelectedFishDisplay"
                                Background="#F0F8FF"
                                BorderBrush="#0078D7"
                                BorderThickness="1"
                                CornerRadius="5"
                                Padding="12"
                                Margin="0,0,0,15"
                                Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="TxtSelectedFishName" 
                                               FontWeight="SemiBold"
                                               FontSize="14"/>
                                    <TextBlock x:Name="TxtSelectedFishPrice" 
                                               Foreground="Gray"
                                               FontSize="12"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                <Button Grid.Column="1"
                                        Content="✕"
                                        Click="BtnClearSelectedFish_Click"
                                        Width="25" Height="25"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#0078D7"
                                        FontWeight="Bold"
                                        Cursor="Hand"/>
                            </Grid>
                        </Border>

                        <!-- Weight Input -->
                        <TextBlock Text="Berat (kg)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtWeight"
                                 Padding="10"
                                 FontSize="13"
                                 Margin="0,0,0,15"
                                 BorderBrush="#CCCCCC"
                                 TextChanged="TxtWeight_TextChanged"/>

                        <!-- Add Button -->
                        <Button x:Name="BtnAddFish"
                                Content="➕ Tambah ke Daftar"
                                Height="40"
                                Background="#28A745"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Click="BtnAddFish_Click"
                                IsEnabled="False">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="5"
                                                        Padding="15,0">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#218838"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#CCCCCC"/>
                                            <Setter Property="Foreground" Value="#999999"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Right Side - Summary & List -->
                <Border Grid.Column="2" 
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Title -->
                        <TextBlock Grid.Row="0"
                                   Text="Daftar Tangkapan" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>

                        <!-- Fish List -->
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto"
                                      Margin="0,0,0,15">
                            <StackPanel x:Name="CatchListContainer">
                                <!-- Empty state -->
                                <TextBlock x:Name="EmptyListMessage"
                                           Text="Belum ada ikan ditambahkan"
                                           Foreground="Gray"
                                           FontStyle="Italic"
                                           TextAlignment="Center"
                                           Margin="0,30,0,0"/>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Summary -->
                        <Border Grid.Row="2"
                                Background="#F8F9FA"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1"
                                CornerRadius="5"
                                Padding="15"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Total Berat:" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="TxtTotalWeight" 
                                               Text="0.00 kg"
                                               HorizontalAlignment="Right"
                                               FontWeight="Bold"
                                               FontSize="14"/>
                                </Grid>
                                <Grid>
                                    <TextBlock Text="Total Harga:" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="TxtTotalPrice" 
                                               Text="Rp 0"
                                               HorizontalAlignment="Right"
                                               FontWeight="Bold"
                                               FontSize="16"
                                               Foreground="#28A745"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="3">
                            <Button x:Name="BtnSave"
                                    Content="💾 Simpan Catatan"
                                    Height="45"
                                    Background="#0078D7"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Click="BtnSave_Click"
                                    IsEnabled="False"
                                    Margin="0,0,0,10">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#005A9E"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#CCCCCC"/>
                                                <Setter Property="Foreground" Value="#999999"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="Batal"
                                    Height="40"
                                    Background="Transparent"
                                    Foreground="#DC3545"
                                    BorderBrush="#DC3545"
                                    BorderThickness="1"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Click="BtnCancel_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFF5F5"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>