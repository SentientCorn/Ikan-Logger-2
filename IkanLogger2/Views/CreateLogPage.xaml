<Page x:Class="IkanLogger2.Views.CreateLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IkanLogger2.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Background="#FFF5F5F5"
      Title="Buat Catatan Tangkapan">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NAVBAR -->
        <local:Navbar Grid.Row="0"/>

        <!-- BACKGROUND -->
        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="/Public/Images/Artboard 16.png"/>
            </Grid.Background>

            <!-- Title Box -->
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,30,0,0"
                    Background="White"
                    CornerRadius="15"
                    Padding="40,20"
                    MinWidth="350"
                    BorderThickness="3" 
                    BorderBrush="#FF1F4F6E">
                <StackPanel>
                    <TextBlock Text="BUAT CATATAN" 
                               FontFamily="MAUIKEA Demo"
                               FontSize="36" 
                               FontWeight="Bold"
                               Foreground="#FF1F4F6E"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Margin="0,140,0,0"
                          Padding="40,20">
                <Grid MaxWidth="900" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="450"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Side - Form Input -->
                    <Border Grid.Column="0" 
                            Background="White"
                            BorderBrush="#FF1F4F6E"
                            BorderThickness="3"
                            CornerRadius="12"
                            Padding="30"
                            Width="400">

                        <StackPanel>
                            <TextBlock Text="Informasi Tangkapan" 
                                       FontFamily="Plus Jakarta Sans"
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       Foreground="#FF1F4F6E"
                                       Margin="0,0,0,20"/>

                            <!-- Notes -->
                            <TextBlock Text="Catatan" 
                                       FontFamily="Plus Jakarta Sans"
                                       FontWeight="SemiBold" 
                                       FontSize="14"
                                       Foreground="#FF1F4F6E"
                                       Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,20">
                                <TextBox x:Name="TxtNotes"
                                         Height="80"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         Padding="12"
                                         FontFamily="Plus Jakarta Sans"
                                         FontSize="13"
                                         Foreground="#FF1F4F6E"
                                         BorderBrush="#FF1F4F6E"
                                         BorderThickness="2">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                                <TextBlock x:Name="TxtNotesPlaceholder"
                                           Text="Tulis catatan..."
                                           Foreground="Gray"
                                           FontFamily="Plus Jakarta Sans"
                                           FontSize="13"
                                           Padding="14,13"
                                           IsHitTestVisible="False"
                                           Visibility="{Binding ElementName=TxtNotes, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"/>
                            </Grid>

                            <Separator Margin="0,0,0,20" Background="#DDDDDD"/>

                            <!-- Add Fish Section -->
                            <TextBlock Text="Tambah Ikan Tangkapan" 
                                       FontFamily="Plus Jakarta Sans"
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="#FF1F4F6E"
                                       Margin="0,0,0,15"/>

                            <!-- Fish Selection with AutoComplete -->
                            <TextBlock Text="Pilih Ikan" 
                                       FontFamily="Plus Jakarta Sans"
                                       FontWeight="SemiBold" 
                                       FontSize="14"
                                       Foreground="#FF1F4F6E"
                                       Margin="0,0,0,8"/>
                            <Grid Margin="0,0,0,15">
                                <TextBox x:Name="TxtFishSearch"
                                         Padding="12"
                                         FontFamily="Plus Jakarta Sans"
                                         FontSize="13"
                                         Foreground="#FF1F4F6E"
                                         BorderBrush="#FF1F4F6E"
                                         BorderThickness="2"
                                         TextChanged="TxtFishSearch_TextChanged"
                                         GotFocus="TxtFishSearch_GotFocus">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                                <TextBlock x:Name="TxtFishSearchPlaceholder"
                                           Text="Ketik nama ikan..."
                                           Foreground="Gray"
                                           FontFamily="Plus Jakarta Sans"
                                           FontSize="13"
                                           Padding="14,13"
                                           IsHitTestVisible="False"
                                           Visibility="{Binding ElementName=TxtFishSearch, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"/>

                                <!-- Autocomplete Popup -->
                                <Popup x:Name="FishSuggestionPopup"
                                       PlacementTarget="{Binding ElementName=TxtFishSearch}"
                                       Placement="Bottom"
                                       Width="{Binding ElementName=TxtFishSearch, Path=ActualWidth}"
                                       MaxHeight="200"
                                       StaysOpen="False">
                                    <Border Background="White"
                                            BorderBrush="#FF1F4F6E"
                                            BorderThickness="2">
                                        <ListBox x:Name="FishSuggestionList"
                                                 FontFamily="Plus Jakarta Sans"
                                                 SelectionChanged="FishSuggestionList_SelectionChanged"
                                                 DisplayMemberPath="FishName"/>
                                    </Border>
                                </Popup>
                            </Grid>

                            <!-- Selected Fish Display -->
                            <Border x:Name="SelectedFishDisplay"
                                    Background="#FFE8F5FF"
                                    BorderBrush="#FF1F4F6E"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,15"
                                    Visibility="Collapsed">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock x:Name="TxtSelectedFishName" 
                                                   FontFamily="Plus Jakarta Sans"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   Foreground="#FF1F4F6E"/>
                                        <TextBlock x:Name="TxtSelectedFishPrice" 
                                                   FontFamily="Plus Jakarta Sans"
                                                   Foreground="#FF2A5F7E"
                                                   FontSize="12"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                    <Button Grid.Column="1"
                                            Content="✕"
                                            Click="BtnClearSelectedFish_Click"
                                            Width="28" Height="28"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="#FF1F4F6E"
                                            FontWeight="Bold"
                                            FontSize="16"
                                            Cursor="Hand"/>
                                </Grid>
                            </Border>

                            <!-- Weight Input -->
                            <TextBlock Text="Berat (kg)" 
                                       FontFamily="Plus Jakarta Sans"
                                       FontWeight="SemiBold" 
                                       FontSize="14"
                                       Foreground="#FF1F4F6E"
                                       Margin="0,0,0,8"/>
                            <Grid Margin="0,0,0,20">
                                <TextBox x:Name="TxtWeight"
                                         Padding="12"
                                         FontFamily="Plus Jakarta Sans"
                                         FontSize="13"
                                         Foreground="#FF1F4F6E"
                                         BorderBrush="#FF1F4F6E"
                                         BorderThickness="2"
                                         TextChanged="TxtWeight_TextChanged">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                                <TextBlock x:Name="TxtWeightPlaceholder"
                                           Text="Contoh: 2.5"
                                           Foreground="Gray"
                                           FontFamily="Plus Jakarta Sans"
                                           FontSize="13"
                                           Padding="14,13"
                                           IsHitTestVisible="False"
                                           Visibility="{Binding ElementName=TxtWeight, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"/>
                            </Grid>

                            <!-- Add Button -->
                            <Button x:Name="BtnAddFish"
                                    Content="➕ Tambah ke Daftar"
                                    Height="45"
                                    FontFamily="Plus Jakarta Sans"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Click="BtnAddFish_Click"
                                    IsEnabled="False">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FF1F4F6E"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="8"
                                                            Padding="15,0">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF8BD8F0"/>
                                                <Setter Property="Foreground" Value="#FF1F4F6E"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#CCCCCC"/>
                                                <Setter Property="Foreground" Value="#999999"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Right Side - Summary & List -->
                    <Border Grid.Column="2" 
                            Background="White"
                            BorderBrush="#FF1F4F6E"
                            BorderThickness="3"
                            CornerRadius="12"
                            Padding="25"
                            Width="400">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Title -->
                            <TextBlock Grid.Row="0"
                                       Text="Daftar Tangkapan" 
                                       FontFamily="Plus Jakarta Sans"
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="#FF1F4F6E"
                                       Margin="0,0,0,15"/>

                            <!-- Fish List -->
                            <ScrollViewer Grid.Row="1" 
                                          VerticalScrollBarVisibility="Auto"
                                          Margin="0,0,0,15">
                                <StackPanel x:Name="CatchListContainer">
                                    <!-- Empty state -->
                                    <TextBlock x:Name="EmptyListMessage"
                                               Text="Belum ada ikan ditambahkan"
                                               FontFamily="Plus Jakarta Sans"
                                               Foreground="Gray"
                                               FontStyle="Italic"
                                               TextAlignment="Center"
                                               Margin="0,30,0,0"/>
                                </StackPanel>
                            </ScrollViewer>

                            <!-- Summary -->
                            <Border Grid.Row="2"
                                    Background="#FFE8F5FF"
                                    BorderBrush="#FF1F4F6E"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,15">
                                <StackPanel>
                                    <Grid Margin="0,0,0,8">
                                        <TextBlock Text="Total Berat:" 
                                                   FontFamily="Plus Jakarta Sans"
                                                   FontWeight="SemiBold"
                                                   Foreground="#FF1F4F6E"/>
                                        <TextBlock x:Name="TxtTotalWeight" 
                                                   Text="0.00 kg"
                                                   FontFamily="Plus Jakarta Sans"
                                                   HorizontalAlignment="Right"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   Foreground="#FF1F4F6E"/>
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="Total Harga:" 
                                                   FontFamily="Plus Jakarta Sans"
                                                   FontWeight="SemiBold"
                                                   Foreground="#FF1F4F6E"/>
                                        <TextBlock x:Name="TxtTotalPrice" 
                                                   Text="Rp 0"
                                                   FontFamily="Plus Jakarta Sans"
                                                   HorizontalAlignment="Right"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   Foreground="#FF1F4F6E"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="3">
                                <Button x:Name="BtnSave"
                                        Content="💾 Simpan Catatan"
                                        Height="50"
                                        FontFamily="Plus Jakarta Sans"
                                        FontSize="15"
                                        FontWeight="SemiBold"
                                        Cursor="Hand"
                                        Click="BtnSave_Click"
                                        IsEnabled="False"
                                        Margin="0,0,0,10">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#FF1F4F6E"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="8">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF8BD8F0"/>
                                                    <Setter Property="Foreground" Value="#FF1F4F6E"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Background" Value="#CCCCCC"/>
                                                    <Setter Property="Foreground" Value="#999999"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Content="Batal"
                                        Height="45"
                                        FontFamily="Plus Jakarta Sans"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Cursor="Hand"
                                        Click="BtnCancel_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Foreground" Value="#FF1F4F6E"/>
                                            <Setter Property="BorderBrush" Value="#FF1F4F6E"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="8">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF8BD8F0"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>