<UserControl x:Class="IkanLogger2.Views.Navbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="#FF1F4F6E" BorderThickness="0,0,0,2" BorderBrush="#FF143A52">
        <Grid Height="70" Width="1920">
            <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#FF1F4F6E" BorderThickness="0,0,0,2" BorderBrush="#FF1F4F6E">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo / Title -->
                    <Button Content="Ikan Logger"
                        FontFamily="MAUIKEA Demo"
                        FontSize="28"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="20, 0"
                        Cursor="Hand"
                        Click="Title_Click" Height="24" Margin="31,22,0,22">  
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF2A5F7E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Navigation Menu -->
                    <StackPanel Grid.Column="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left"
                    Margin="0,0,410,0">
                        <Button Content="RECORDS"
                    FontFamily="MAUIKEA Demo"
                    FontSize="28"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="20,0"
                    Cursor="Hand"
                    Click="Records_Click" Height="24">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF2A5F7E"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="PROFILE"
                    FontFamily="MAUIKEA Demo"
                    FontSize="28"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="20,0"
                    Cursor="Hand"
                    Click="Profile_Click" Height="24">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF2A5F7E"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>