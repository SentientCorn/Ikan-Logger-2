<Page x:Class="IkanLogger2.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
      xmlns:local="clr-namespace:IkanLogger2.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#FFF5F5F5"
      Title="DashboardPage">

    <Grid>
        <!-- MAP BACKGROUND -->
        <gmap:GMapControl x:Name="MapControl"
                          Zoom="10" />
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" 
            Margin="10" Background="White" CornerRadius="5" Padding="10">

            <Border.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Filter Jenis Ikan:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="FishFilterComboBox" 
                      Width="200" 
                      SelectionChanged="FishFilterComboBox_SelectionChanged"/>
            </StackPanel>
        </Border>
        <Border x:Name="FishInfoPanel" 
            HorizontalAlignment="Right" VerticalAlignment="Bottom" 
            Margin="20" Padding="15" Width="250"
            Background="White" CornerRadius="8" Visibility="Collapsed">

            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <TextBlock Text="Detail Lokasi" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                    <Button Content="✕" Click="CloseInfoPanel_Click" 
                        HorizontalAlignment="Right" Width="25" Height="25" 
                        Background="Transparent" BorderThickness="0" FontWeight="Bold" Cursor="Hand"/>
                </Grid>

                <Separator Margin="0,0,0,10"/>

                <TextBlock x:Name="TxtLocationName" Text="Lokasi #ID" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Text="Daftar Ikan &amp; Harga:" Foreground="Gray" FontSize="12" Margin="0,0,0,5"/>

                <TextBlock x:Name="TxtFishList" TextWrapping="Wrap" Text="- Ikan A (Rp 10.000)" FontSize="13"/>
            </StackPanel>
        </Border>
        <!-- Example overlay -->
        <!--<Border Background="#80000000" Padding="10">
            <StackPanel VerticalAlignment="Top">
                <TextBlock Text="Dashboard"
                   FontSize="26"
                   Foreground="White"/>
            </StackPanel>
        </Border> -->
    </Grid>
</Page>
