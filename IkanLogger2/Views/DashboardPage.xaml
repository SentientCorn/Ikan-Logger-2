<Page x:Class="IkanLogger2.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
      xmlns:local="clr-namespace:IkanLogger2.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Background="#FFF5F5F5"
      Title="DashboardPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <local:Navbar Grid.Row="0"/>

        <!-- MAIN CONTENT AREA -->
        <Grid Grid.Row="1">
            <!-- MAP AREA (Full Width) -->
            <Grid Grid.Column="0">
                <!-- MAP BACKGROUND -->
                <gmap:GMapControl x:Name="MapControl" Zoom="10" />

                <!-- Filter Box -->
                <Border HorizontalAlignment="Left" VerticalAlignment="Top" 
                        Margin="360,20,0,0" Background="White" CornerRadius="5" Padding="10" BorderThickness="3" BorderBrush="#FF1F4F6E">
                    <StackPanel>
                        <TextBlock Text="Filter Jenis Ikan:" 
                                   FontFamily="Plus Jakarta Sans"
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"
                                   Foreground="#FF1F4F6E"/>
                        <ComboBox x:Name="FishFilterComboBox" 
                                  Width="200"
                                  FontFamily="Plus Jakarta Sans"
                                  SelectionChanged="FishFilterComboBox_SelectionChanged"/>
                    </StackPanel>
                </Border>

                <!-- Fish Info Panel -->
                <Border x:Name="FishInfoPanel" 
                        HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                        Margin="20" Padding="15" Width="250"
                        Background="White" CornerRadius="8" Visibility="Collapsed" BorderThickness="3" BorderBrush="#FF1F4F6E">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <TextBlock Text="Detail Lokasi" 
                                       FontFamily="Plus Jakarta Sans"
                                       FontWeight="Bold" 
                                       FontSize="16" 
                                       Foreground="#FF1F4F6E"
                                       VerticalAlignment="Center"/>
                            <Button Content="✕" Click="CloseInfoPanel_Click" 
                                    HorizontalAlignment="Right" Width="25" Height="25" 
                                    Background="Transparent" BorderThickness="0" 
                                    FontWeight="Bold" 
                                    Foreground="#FF1F4F6E"
                                    Cursor="Hand"/>
                        </Grid>
                        <Separator Margin="0,0,0,10"/>
                        <TextBlock x:Name="TxtLocationName" 
                                   Text="Lokasi #ID" 
                                   FontFamily="Plus Jakarta Sans"
                                   FontWeight="SemiBold" 
                                   Foreground="#FF1F4F6E"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Daftar Ikan &amp; Harga:" 
                                   FontFamily="Plus Jakarta Sans"
                                   Foreground="Gray" 
                                   FontSize="12" 
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtFishList" 
                                   TextWrapping="Wrap" 
                                   Text="- Ikan A (Rp 10.000)" 
                                   FontFamily="Plus Jakarta Sans"
                                   FontSize="13"
                                   Foreground="#FF1F4F6E"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- LOG TANGKAPAN PANEL (Kiri) -->
            <Border HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Margin="20,20,0,0"
                    Width="320"
                    Background="White" 
                    CornerRadius="10"
                    BorderBrush="#DDDDDD">

                <StackPanel>
                    <!-- Header Panel Log -->
                    <Border Background="#FF1F4F6E" 
                            CornerRadius="10,10,0,0"
                            Padding="20,15">
                        <StackPanel>
                            <TextBlock Text="Log Tangkapan" 
                                       FontFamily="Plus Jakarta Sans"
                                       Foreground="White" 
                                       FontWeight="Bold" 
                                       FontSize="18"/>
                            <TextBlock Text="3 Terakhir" 
                                       FontFamily="Plus Jakarta Sans"
                                       Foreground="#E0F0FF" 
                                       FontSize="12"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Content Panel Log -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  MaxHeight="430"
                                  Padding="15">
                        <StackPanel x:Name="RecentLogsContainer">
                            <!-- Log items akan di-generate di code-behind -->
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Tombol Buat Catatan Baru -->
                    <Border Background="#F9F9F9" 
                            BorderBrush="#DDDDDD" 
                            BorderThickness="0,1,0,0"
                            CornerRadius="0,0,10,10"
                            Padding="15">
                        <Button x:Name="BtnCreateNewLog"
                                Click="BtnCreateNewLog_Click"
                                Height="40"
                                BorderThickness="0"
                                FontFamily="Plus Jakarta Sans"
                                FontWeight="SemiBold"
                                FontSize="14"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FF1F4F6E"/>
                                    <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                BorderThickness="0">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF8BD8F0"/>
                                            <Setter Property="Foreground" Value="#FF1F4F6E"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="➕" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Buat Catatan Baru" VerticalAlignment="Center" FontSize="12" Margin="0,0,10,0"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>