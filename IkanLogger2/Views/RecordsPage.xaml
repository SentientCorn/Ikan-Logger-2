<Page x:Class="IkanLogger2.Views.RecordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IkanLogger2.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Background="#FFF5F5F5"
      Title="Records">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NAVBAR -->
        <local:Navbar Grid.Row="0"/>

        <!-- BACKGROUND -->
        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="/Public/Images/Artboard 16.png"/>
            </Grid.Background>

            <!-- Title Box -->
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,40,0,0"
                    Background="White"
                    CornerRadius="15"
                    Padding="40,20"
                    MinWidth="250"
                    BorderThickness="3" BorderBrush="#FF1F4F6E">
                <TextBlock Text="RECORDS" 
                           FontFamily="MAUIKEA Demo"
                           FontSize="36" 
                           FontWeight="Bold"
                           Foreground="#FF1F4F6E"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Content Area -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Margin="0,140,0,0"
                          Padding="40,20">
                <StackPanel x:Name="RecordsContainer">
                    <!-- Log cards akan di-generate di code-behind -->
                </StackPanel>
            </ScrollViewer>

            <!-- Loading Indicator -->
            <Grid x:Name="LoadingPanel" 
                  Background="#80FFFFFF"
                  Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" 
                           HorizontalAlignment="Center">
                    <TextBlock Text="⏳" FontSize="48" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="Memuat data..." 
                              FontFamily="Plus Jakarta Sans"
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#FF1F4F6E"/>
                </StackPanel>
            </Grid>

            <!-- Empty State -->
            <Grid x:Name="EmptyStatePanel" 
                  Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" 
                           HorizontalAlignment="Center">
                    <TextBlock Text="📋" FontSize="64" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>
                    <TextBlock Text="Belum ada catatan tangkapan" 
                              FontFamily="Plus Jakarta Sans"
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Foreground="#FF1F4F6E"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Mulai buat catatan pertama Anda" 
                              FontFamily="Plus Jakarta Sans"
                              FontSize="14" 
                              Foreground="#FF2A5F7E"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,20"/>
                    <Button Content="Buat Catatan Baru"
                           Padding="20,10"
                           FontFamily="Plus Jakarta Sans"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Cursor="Hand"
                           Click="BtnCreateNew_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF1F4F6E"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="8"
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF8BD8F0"/>
                                        <Setter Property="Foreground" Value="#FF1F4F6E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>