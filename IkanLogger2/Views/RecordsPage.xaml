<Page x:Class="IkanLogger2.Views.RecordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IkanLogger2.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Background="#FFF5F5F5"
      Title="Records">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#DDDDDD" 
                BorderThickness="0,0,0,1"
                Padding="30,20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <StackPanel>
                    <TextBlock Text="Riwayat Tangkapan" 
                               FontSize="28" 
                               FontWeight="Bold"
                               Foreground="#0078D7"/>
                    <TextBlock x:Name="TxtUserInfo"
                               Text="Semua catatan tangkapan Anda"
                               FontSize="14"
                               Foreground="Gray"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Filter/Search Section (Optional untuk future) -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center">
                    <TextBlock Text="Total Catatan: " 
                              FontSize="14" 
                              Foreground="Gray"
                              VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtTotalRecords" 
                              Text="0" 
                              FontSize="14" 
                              FontWeight="Bold"
                              Foreground="#0078D7"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="30,20">
            <StackPanel x:Name="RecordsContainer">
                <!-- Log cards akan di-generate di code-behind -->
            </StackPanel>
        </ScrollViewer>

        <!-- Loading Indicator -->
        <Grid x:Name="LoadingPanel" 
              Grid.Row="1"
              Background="#80FFFFFF"
              Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" 
                       HorizontalAlignment="Center">
                <TextBlock Text="⏳" FontSize="48" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>
                <TextBlock Text="Memuat data..." 
                          FontSize="16" 
                          Foreground="Gray"/>
            </StackPanel>
        </Grid>

        <!-- Empty State -->
        <Grid x:Name="EmptyStatePanel" 
              Grid.Row="1"
              Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" 
                       HorizontalAlignment="Center">
                <TextBlock Text="📋" FontSize="64" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,15"/>
                <TextBlock Text="Belum ada catatan tangkapan" 
                          FontSize="18" 
                          FontWeight="SemiBold"
                          Foreground="Gray"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Mulai buat catatan pertama Anda" 
                          FontSize="14" 
                          Foreground="LightGray"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,20"/>
                <Button Content="Buat Catatan Baru"
                       Padding="20,10"
                       Background="#0078D7"
                       Foreground="White"
                       BorderThickness="0"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Cursor="Hand"
                       Click="BtnCreateNew_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="5"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005A9E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>